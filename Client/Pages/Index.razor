@inject IJSRuntime JS
@page "/"

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />

<button @onclick="appendText">Run JS Script</button>

<div id="p-container">

</div>

@code {
    public async void appendText()
    {
        // showAlert = function
        // Text will app.. = parameters
        await JS.InvokeAsync<string>("showAlert", "Text will append when you close this alert!");
    }
}